@model IEnumerable<Order>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<div class="album py-5 bg-body-tertiary">
    <div class="container">

        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="card shadow-sm">
                        <img class="card-img-top" src="" alt="Alternate Text" />
                        <div class="card-body">
                            <p class="card-text">@item.Cost</p>
                            <p class="card-text">@item.Notes</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a type="button" asp-controller="Club" asp-action="Detail" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">View</a>
                                    <a type="button" asp-controller="Club" asp-action="Ticket" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Buy</a>
                                </div>
                                <small class="text-body-secondary">@item.PaymentMethod</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

